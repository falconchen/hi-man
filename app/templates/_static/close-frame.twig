{% block javascript %}
<script>
    
     window.addEventListener('message',function(event) {

        event.source.postMessage('reload',event.origin);
        setTimeout(()=>{
            window.opener = null;
            window.open('', '_self');
            window.close();
        },1500);
        

    },false);
</script>
