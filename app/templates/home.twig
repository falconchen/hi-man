{% extends 'layout.twig' %}


{% block title %}
	{{ t.trans('Homepage') }}
{% endblock %}

{% block content %}

	<!-- Header -->
	<header class="w3-panel w3-center w3-opacity w3-hide" style="">
		<h1 class="w3-xlarge">{{ title|upper }}</h1>
		<h2>正在开发</h2>

		<div class="w3-padding-32">
			<div class="w3-bar w3-border">
				<a href="#" class="w3-bar-item w3-button w3-light-grey">主页</a>
				<a href="#" class="w3-bar-item w3-button ">文章</a>
				<a href="#" class="w3-bar-item w3-button">动态</a>
				<a href="#" class="w3-bar-item w3-button w3-hide-small">相册</a>
			</div>
		</div>
	</header>


	<main class="hi-main">
		{% if posts %}
			<ul class="w3-ul  w3-mobile " style="max-width:750px;margin:0 auto;">
				{%for post in posts %}
					<li id="note-{{ post.post_name }}" class="w3-border-0">
						<div class="w3-padding-bottom hi-excerpt">

							<h5>
								
							    
								<a class="title w3-hover-text-blue" href="{{ c.router.pathFor('post',{'name':post.post_name}) }}">{{ post.post_title }} </a>
								{% if post.post_visibility == 'private' or post.post_visibility == 'password' %}
								<code class="w3-small">{{ t.trans(post.post_visibility) }} 🔒</code>
								{% endif %}	
							</h5>

							<p class="w3-small hi-text-grey">
								{{post.post_content|striptags|truncate(180, false,"...\n")|raw }}
							</p>

							<div class="w3-small hi-meta">

								<a class="nickname" target="_blank" href="#">{{post.post_author_name}}</a>
								 ｜ 								
								<span class="w3-text-grey">	
										
									{# <i class="w3-small fa fa-paperclip"></i>							 #}
									{% if post.post_status == 'publish' %}
									{{post.post_date|time_diff}}
									{% elseif post.post_status == 'future'%}
										{{post.post_date_local}} {{t.trans('Draft status')}} 
									{% elseif post.post_status == 'draft' %}		
										{{ t.trans('Draft status')}}
									{% endif %}

									{% if user_id == post.post_author %}	
										 ｜ 	
										<a class="hi-underline-dotted" href="{{ c.router.pathFor('post-admin.edit',{'name':post.post_name}) }}">
										 {{t.trans('Edit')}}</a>
									{% endif %}
								</span>
								

							</div>
						</div>
					</li>
				{% endfor %}
			</ul>
			<div class=" w3-center w3-margin-top">
			{% include 'pagination-w3css.twig' with {data: posts} only%}
			</div>
			{% else %}

		{% endif %}

		
	</main>
{% endblock %}
