<form class="w3-container w3-padding-large w3-card-4 hi-form w3-mobile" action="{{ container.router.pathFor('bind-oscer.post') }}" method="post" autocomplete="off">
    <legend>绑定OSC用户</legend>
    <div class="form-group {% if errors.first('email') %}has-error{% endif %}">
        <label for="email">手机/邮箱</label>
        <input class="form-control" type="text" name="email" id="email"/>
        {% if errors.first('email') %}
            {{ errors.first('email') }}
        {% endif %}
    </div>

    <div class="form-group {% if errors.first('password') %}has-error{% endif %}">
        <label for="password">密码</label>
        <input class="form-control" type="password" name="password" id="password"/>
        {% if errors.first('password') %}
            {{ errors.first('password') }}
        {% endif %}
    </div>
    {{ csrf_inputs() }}
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="绑定"/></div>
</form>
