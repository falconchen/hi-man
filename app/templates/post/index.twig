{% extends 'layout.twig' %}

{% block title %}
	{{ post.post_title }}
{% endblock %}

{% block content %}
	
	<!-- Header -->
	<header class="w3-margin-top w3-margin-bottom w3-center w3-content hi-header">
		<h1 class="w3-xlarge">{{ post.post_title }} 
		</h1>
		<div class="w3-center">

			
			<dt class="hi-text-dark">

				<i class="fa fa-calendar-check-o "></i>
				{# {{  (post.post_status == 'draft') ? t.trans('Draft') : post.post_date_local }} #}
				{{post.post_preview ? t.trans('Previewing') : ''}}	

				{% if post.post_status == 'publish' %}
				{{ post.post_date_local }}
				{% elseif post.post_status == 'future'%}
				{{post.post_date_local}} <code class="w3-text-red">{{t.trans('Future status')}}</code>
				{% elseif post.post_status == 'draft' %}		
					<code class="w3-text-blue">{{ t.trans('Draft status')}}</code>
				{% endif %}
			
			
				<a class="nickname hi-dot" target="_blank" href="{{ c.router.pathFor('user',{'uid':post.post_author}) }}">
					{{post.post_author_name}}</a>

				

				{% if user_id == post.post_author and not post.post_preview %}	
					<a class="hi-dot hi-text-lighter-blue" style="" href="{{ c.router.pathFor('post-admin.edit',{'name':post.post_name}) }}">{{t.trans('Edit')}}</a>
				{% endif %}

				{% if post.post_visibility == 'private' or post.post_visibility == 'password' %}
				<code>{{ t.trans(post.post_visibility) }} ðŸ”’</code>
				{% endif %}	

			</dt>
			
			
		</div>
	</header>


	<main class="hi-content-wrap w3-mobile ">
		

		<div class="w3-content hi-content">
			{{post.post_content_clean|raw}}

			{% if not post.post_preview and post.osc_link %}
				{% if (not post.getSyncOptions().privacy) or (post.getSyncOptions().privacy == '1' and  user_id == post.post_author) %}
				<div class="w3-clear">
				<a class="hi-view-in-osc-link w3-left w3-margin-top hi-text-lighter-blue w3-padding-small w3-button-small w3-border w3-border-blue w3-hover-blue w3-round" href="{{ post.osc_link }}" target="_blank">				
				<i class="fa fa-paper-plane-o"></i>
					{{t.trans('View in OSC')}} 
				</a>
				</div>
			{% endif %}			

			{% endif %}
		</div>

		
		<hr/>
	</main>


{% endblock %}
