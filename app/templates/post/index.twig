{% extends 'layout.twig' %}

{% block title %}
	{{ post.post_title }}
{% endblock %}

{% block content %}

	<!-- Header -->
	<header class="w3-margin-top w3-center hi-header">
		<h1 class="w3-xlarge">{{ post.post_title }}</h1>
		<div class="w3-small w3-center">


			<span class="w3-text-grey">
				<i class="fa fa-calendar-check-o "></i>
				{{  (post.post_status == 'draft') ? 'draft' : post.post_date_local }}			
			</span>
			by
			<a class="nickname" target="_blank" href="#">
				{{post.post_author_name}}</a>

			{% if user_id == post.post_author %}	
				<a class="hi-underline-dotted" href="{{ c.router.pathFor('post-admin.edit',{'name':post.post_name}) }}">Edit</a>
			{% endif %}
			
			{% if post.osc_link %}
			<a class="w3-text-green w3-margin-left" href="{{ post.osc_link }}" target="_blank">				
			<i class="fa  fa-paper-plane-o"></i>
				View in OSC 
			</a>
			{% endif %}
		</div>
	</header>


	<main class="hi-content-wrap w3-mobile ">


		<div class="w3-content hi-content">
			{{post.post_content_clean|raw}}
		</div>


		<hr/>
	</main>


{% endblock %}
