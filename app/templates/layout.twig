{% set c = container %}
{% set user = c.session.user ? c.session.user : null %}
{% set user_id = user ? user.id : 0 %}
{% set t = c.translator %}
<!DOCTYPE html>
<html lang="{{c.get('settings').language.html|default('en')}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}
			{{ t.tran('A simple and stupid cms') }}
			{% endblock %}
			&ndash; Hi.CMS</title>

		<link rel="stylesheet" href="{{ static_url() }}/css/bootstrap.min.css">
		<link rel="stylesheet" href="{{ static_url() }}/css/bootstrap-theme.min.css">
		<link rel="stylesheet" href="https://lib.baomitu.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="{{ static_url() }}/css/w3.css">
		<link rel="stylesheet" href="{{ static_url() }}/css/style.css?ver={{ git_latest().dateVer }}">
		<link rel="icon" href="{{ static_url() }}/images/hi-logo.png" sizes="32x32"/>

	{# <link href='https://fonts.googleapis.com/css?family=Source Code Pro' rel='stylesheet'> #}

		<!--[if lt IE 9]>
						    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
						    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
						    <![endif]-->

	</head>
	<body>


		{% block nav %}
			<nav
				class="navbar  navbar-fixed-top w3-border-bottom w3-card hi-dark">
				{# <nav class="navbar navbar-inverse navbar-fixed-top"> #}
				<div class="container">
					<div class="navbar-header hi-navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar w3-blue"></span>
							<span class="icon-bar w3-blue"></span>
							<span class="icon-bar w3-blue"></span>
						</button>
						<a class="navbar-brand w3-hover w3-blue w3-text-white w3-card" href="{{ base_url() }}" style="font-weight:600;">
							{# <i class="fa fa-fw fa-smile-o"></i> #}
							Hi

						</a>

					</div>
					<div id="navbar" class="collapse navbar-collapse">

						<ul class="nav navbar-nav"></ul>

						<ul class="nav navbar-nav navbar-right">
							{% if container.session.user is not defined %}
								<li>
									<a href="{{ base_url() }}/login">{{t.trans('Login')}}</a>
								</li>
								<li>
									<a href="{{ base_url() }}/register">{{t.trans('Register')}}</a>
								</li>
							{% else %}
                                <li class="">
                                    
                                    <a class="w3-hover-blue" href="{{path_for('post-admin.new')}}"><i class="fa fa-pencil-square-o"></i> {{t.trans('Go writing')}}</a>
                                </li>
								<li>									
									<a class="w3-hover-blue" href="{{ base_url() }}/dashboard">
                                    <i class="fa  fa-user-o"></i> 
                                    {{ container.session.user.username }}</a>
								</li>
								
								<li>
									<a class="w3-hover-blue" href="{{ base_url() }}/logout">
                                    <i class="fa fa-sign-out"></i>
                                     {{t.trans('Logout')}}
                                    </a>
								</li>
							{% endif %}

						</ul>
					</div>
					<!--/.nav-collapse -->

				</div>
			</nav>


		{% endblock %}

		<div id="layout" class="container">

			{% if flash %}

				{% for msg in flash %}
					<div class="panel {{ msg|flash_fmt('class') }} w3-display-container">
						<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topright w3-text-red" style="top: 8px;right: 8px;">x</span>
						<div class="w3-panel ">
							{{ msg|flash_fmt('msg') }}
						</div>

					</div>
				{% else %}
					{#非数组#}
					<div class="panel {{ flash|flash_fmt('class') }} w3-display-container">
						<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topright w3-text-red" style="top: 8px;right: 8px;">x</span>
						<div class="w3-panel">
							{{ flash|flash_fmt('msg')  }}
						</div>

					</div>
				{% endfor %}


			{% endif %}

			{% block content %}{% endblock %}


			<footer class="w3-container w3-padding-16 w3-center ">
				<strong>					
					<p class="w3-text-grey">
						<a class="w3-small w3-hover-opacity w3-padding-small w3-border-aqua" href="{{ base_url() }}" target="_blank">
							<i class="fa fa-heart"></i>
							Powered by Hi.CMS &copy; 2019-{{"now"|date('Y',c.settings.timezone)}}</a>
					</p>
				</strong>
                <div class="w3-tiny w3-opacity">{{t.trans('Latest commit at')}} {{ git_latest().dateString }}</div>
			</footer>
		</div>


		<script type="text/javascript" src="https://lib.baomitu.com/jquery/1.11.3/jquery.min.js"></script>
		<script type="text/javascript" src="{{ static_url() }}/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="{{ static_url() }}/js/site.js?ver={{ git_latest().dateVer }}"></script>
		{% block javascript %}{% endblock %}

	</body>
</html>
