#!/bin/env bash

# backup dongDong in cron
# */15 * * * * /path/to/BackupDongDanTasks.cron >/dev/null 2>&1

SHELL_FOLDER=$(dirname $(readlink -f "$0"))
cd $SHELL_FOLDER

PHP_BIN=$(which php)
$PHP_BIN ../public/index.php BackupDongDan  
$PHP_BIN ../public/index.php BackupDongDanComments "take=10"
$PHP_BIN ../public/index.php BackupDongDanImages "take=10"

exit 0

